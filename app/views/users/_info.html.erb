<table class='table'>
  <tr><%= image_tag user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th>
	    <%= link_to user_following_path(user) do %>
	    <%= user.active_relationships.count %>
	    <% end %>
	   </th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th>
	    <%= link_to user_followers_path(user) do %>
	    <%= user.passive_relationships.count %></th>
	    <% end %>
  </tr>

</table>
  <% if user != current_user %>
    <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info btn-sm　mb-3" %>
    <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :POST, class: "btn btn-success btn-sm mb-3" %>
    <% end %>
  <% end %>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>